{
    "compileOnSave": true,
    "compilerOptions": {
        "declaration": true,
        "alwaysStrict": true,
        "charset": "UTF-8",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "newLine": "LF",
        "preserveConstEnums": true,
        "removeComments": true,
        "target": "ESNext",
        "incremental": true,
        "baseUrl": "./",
        "resolveJsonModule": true,
        "paths": {
            "@controllers/*": ["./src/controllers/*"],
            "@constants/*": ["./src/constants/*"],
            "@routes/*":["./src/routes/*"],
            "@configs/*": ["./src/configs/*"],
            "@utils/*": ["./src/utils/*"],
            "@lib/*": ["./src/lib/*"]

        },
        "typeRoots": ["./global.d.ts"]
    },
    "ts-node": {
        "files": true
    },
    "include": ["src", "./*.ts", "global.d.ts", "prod-paths.js", "*.env"],
    "exclude": ["node_modules", "dist"]
}